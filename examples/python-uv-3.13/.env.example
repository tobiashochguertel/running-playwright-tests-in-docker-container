# Docker Image Configuration
# Organization/user prefix for Docker images (e.g., dockerhub username)
IMAGE_ORGANIZATION=tobiashochgurtel
# Full image name with organization prefix
IMAGE_NAME=${IMAGE_ORGANIZATION}/playwright-test
# Python version for the Docker image
PYTHON_VERSION=3.13

# Browser Configuration
# Browser to use for Playwright tests (firefox, chromium, webkit)
BROWSER=firefox

# Build Configuration
# Whether to refresh UV package manager cache during build
UV_CACHE_REFRESH=false

# Playwright Configuration
# Run Playwright in headless mode (true) or with visible browser (false)
PLAYWRIGHT_HEADLESS=true

# Display Configuration
# X11 display number for Xvfb virtual display server
DISPLAY=:99
# Resolution for Xvfb display (WIDTHxHEIGHTxDEPTH)
XVFB_RESOLUTION=1280x1024x24

# Pytest Configuration
# Pytest verbosity level (-v, -vv, -vvv)
PYTEST_VERBOSE=-vv
# Pytest traceback style (auto, long, short, line, native, no)
PYTEST_TRACEBACK=long

# Output Configuration
# Disable colored output (0=enabled, 1=disabled)
NO_COLORS=0
